#include <iostream>
#include <string>
using namespace std;

class Bin2Decimal {
public:
    void to_decimal(string bin) {
        int result = 0;
        for (int i = 0; i < bin.length(); ++i) {
            result = result * 2 + (bin[i] - '0');
    	}
        cout << bin << " -> " << result << endl;
    }
};

int main() {
    Bin2Decimal d;
    d.to_decimal("1000");
    d.to_decimal("1111");
    return 0;
}
